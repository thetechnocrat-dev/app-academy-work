<h1>Search!</h1>

<nav class="users-search" action="/users/search" method="GET">
  <input
    type="text"
    name="query"
    value="<%= @query %>">

  <ul class="users"></ul>
</nav>

<ul>
  <% @users.each do |user| %>
    <li>
      <%= link_to user.username, user_url(user) %>
      <%= render "follows/form", user: user %>
    </li>
  <% end %>
</ul>
